<h4>Bucket List: {{model.bucketTypeId}}</h4>

{{crumb-trail model=model}}

{{#if model.isLoaded}}
    <div class="container" style="margin-top: 2em;">
        <div class="row">
            <div>
            Cache created: {{model.created}}
            {{#if model.cluster.developmentMode}}
                {{refresh-buckets action="refreshBuckets" bucketList=model}}
            {{/if}}
            </div>
        </div>
    </div>

    <div class="container" style="margin-top: 2em;">
        Displaying
        <strong>{{model.count}}</strong>
        buckets out of
        <strong>{{model.total}}</strong>
        total.
    </div>

    <div class="container" style="padding-top: 2em;">
        {{#riak-buckets bucketList=model cluster=model.cluster
            bucketTypeI=model.bucketTypeId}}
        {{/riak-buckets}}
    </div>
{{else}}
    {{loading-spinner}}
{{/if}}
