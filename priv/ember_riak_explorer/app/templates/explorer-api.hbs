<h2 class="page-header" id="title">{{pageTitle}}</h2>

<h3>Service Information:</h3>

<strong>Name:</strong> {{model.service}}<br />
<strong>Status:</strong> 
{{#if model.status.ping}}Available ({{model.status.ping.message}})
{{else}}Unavailable{{/if}}
<br />

<h3>Routes</h3>

<table class="table">
    <thead>
        <tr>
            <th>Path</th>
            <th>Resources</th>
        </tr>
    </thead>
    <tbody>
{{#each route in model.routes}}
        <tr>
            <td>{{route.links.self}}</td>
            <td>[{{route.resources}}]</td>
        </tr>
{{/each}}
    </tbody>
</table>
