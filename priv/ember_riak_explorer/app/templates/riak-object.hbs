<div class="container">
    <div class="row">
        <div class="col-md-12">
            <strong>{{model.object_key}}</strong>
        </div>
    </div>
</div>
<br />
<div class="container">
    <div class="row">
        <div class="col-md-1">
        </div>
        <div class="col-md-11">
            in
            {{#link-to 'cluster' (query-params cluster_id=cluster_id)
                    classNames='btn btn-xs btn-primary'}}
                {{bucket_type_id}}{{/link-to}} cluster
            /
            {{#link-to 'bucket_list' (query-params cluster_id=cluster_id
                    bucket_type_id=bucket_type_id)
                    classNames='btn btn-xs btn-danger'}}
                {{bucket_type_id}}{{/link-to}} bucket type
            /
            {{#link-to 'key_list' (query-params cluster_id=cluster_id
                    bucket_type_id=bucket_type_id bucket_id=bucket_id)
                    classNames='btn btn-xs btn-danger'}}
                {{bucket_id}}{{/link-to}} bucket

        </div>
    </div>
</div>
<br />
<div class="container">
    <div class="row">
        <div class="col-md-1">
        </div>
        <div class="col-md-4">
            Loaded: {{model.headers.date}}
        </div>
        <div class="col-md-4">
            Deleted:
            {{#if model.headers.x-riak-deleted}}
            <strong>Yes</strong>
            {{else}}
            No
            {{/if}}
        </div>
    </div>
</div>
<table class="table" style="margin-top: 2em;">
    <thead>
        <tr>
            <th>Header</th>
            <th>Value</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>ETag:</td>
            <td>{{model.headers.etag}}</td>
        </tr>
        <tr>
            <td>Causal Context:</td>
            <td>{{model.headers.x-riak-vclock}}</td>
        </tr>
    </tbody>
</table>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <strong>Contents</strong>
            <a href="{{model.url}}" class="btn btn-xs btn-primary">View raw</a>
        </div>
        <div class="col-md-4">
            Content Type: <b>{{model.headers.content-type}}</b>
        </div>
        <div class="col-md-4">
            Last Modified: <b>{{model.headers.last-modified}}</b>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">

        </div>
    </div>
</div>
