<div class="container">
    <div class="row">
        <div class="col-md-8">
            <strong>{{model.object_key}}</strong>
        </div>
        <div class="col-md-4">
            Deleted:
            {{#if model.obj.headers.other.x-riak-deleted}}
                <strong>Yes</strong>
            {{else}}
                No
                {{delete-object action="deleteObject" cluster_id=cluster_id
                    bucket_type_id=bucket_type_id bucket_id=bucket_id
                    object_key=object_key}}
            {{/if}}
        </div>
    </div>
</div>
<br />
<div class="container">
    <div class="row">
        <div class="col-md-1">
        </div>
        <div class="col-md-11">
            in
            {{#link-to 'cluster' (query-params cluster_id=cluster_id)
                    }}
                {{bucket_type_id}}{{/link-to}} cluster
            /
            {{#link-to 'bucket_list' (query-params cluster_id=cluster_id
                    bucket_type_id=bucket_type_id)
                    }}
                {{bucket_type_id}}{{/link-to}} bucket type
            /
            {{#link-to 'key_list' (query-params cluster_id=cluster_id
                    bucket_type_id=bucket_type_id bucket_id=bucket_id)
                    }}
                {{bucket_id}}{{/link-to}} bucket

        </div>
    </div>
</div>

<br />
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <strong>Last Modified:</strong>
            {{model.obj.headers.other.last-modified}}
        </div>
    </div>
</div>

<br />
<div class="container">
    <div class="row">
        <div class="col-md-12">
            {{#object-headers headers=model.obj.headers.indexes
                title='Secondary Indexes'}}{{/object-headers}}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {{#object-headers headers=model.obj.headers.custom
                title='Custom Headers'}}{{/object-headers}}
        </div>
    </div>

</div>

<br />
<div class="container">
    <h4>Contents</h4>
    <div class="row">
        <div class="col-md-2">
            <a href="{{model.url}}" class="btn btn-xs btn-primary">View raw</a>
        </div>
        <div class="col-md-5">
            Content Type: <b>{{model.obj.headers.other.content-type}}</b>
        </div>
        <div class="col-md-5">
            Page loaded: {{model.obj.headers.other.date}}
        </div>
    </div>
</div>
<br />
{{#if model.obj.contents}}
<pre><code>{{model.obj.contents}}</code></pre>
{{/if}}

<br />
<div class="container">
    <h4>Version Details</h4>

    <div class="row">
        <div class="col-md-7">
            <strong>Causal Context:</strong>
            {{model.obj.headers.other.x-riak-vclock}}
        </div>
        <div class="col-md-5">
            <strong>ETag:</strong>
            {{model.obj.headers.other.etag}}
        </div>
    </div>
</div>
