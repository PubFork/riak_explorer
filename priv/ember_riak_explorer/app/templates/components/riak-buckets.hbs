<table class="table">
<tbody>
{{#each bucketList.buckets as |bucket|}}
    <tr>
        <td>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    {{#link-to 'bucket' bucket
                            classNames='btn btn-sm btn-primary cluster-resource-link' }}
                        <span class="glyphicon glyphicon-folder-close cluster-resource-icon"
                            aria-hidden="true"></span>
                        {{bucket.name}}{{/link-to}}
                </div>
            </div>
        </div>
        </td>
    </tr>
{{else}}
    No buckets found.
{{/each}}
</tbody>
</table>
