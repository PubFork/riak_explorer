<table class="table">
<tbody>
{{#each bucketList.buckets as |bucket|}}
    <tr>
        <td>
        <div class="container">
            <div class="row">
                <div class="col-md-6">{{bucket.name}}</div>
                <div class="col-md-4">
                    <strong>Actions:</strong>
                    {{#link-to 'bucket_props' (query-params cluster_id=cluster.clusterId
                            bucket_type_id=bucket.bucketTypeId bucket_id=bucket.bucketId)
                            classNames='btn btn-xs btn-primary' }}
                        View Properties{{/link-to}}
                    {{#link-to 'key_list' (query-params cluster_id=bucket.clusterId
                            bucket_type_id=bucket.bucketTypeId bucket_id=bucket.bucketId)
                            classNames='btn btn-xs btn-primary' }}
                        Key List{{/link-to}}
                </div>
            </div>
        </div>
        </td>
    </tr>
{{else}}
    No buckets found.
{{/each}}
</tbody>
</table>
