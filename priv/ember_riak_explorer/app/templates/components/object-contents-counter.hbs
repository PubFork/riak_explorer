<div class="container">
    <div class="object-contents">
        <div class="object-contents-header">
            <div class="object-contents-info">
                Counter
            </div>
            <div class="object-contents-actions">
                    {{#if isEditing}}
                        (Editing)
                        {{#link-to 'riak-object' model
                                classNames='btn btn-xs btn-default' }}
                            Cancel{{/link-to}}
                    {{else}}
                        {{#if model.canBeViewedRaw}}
                            {{button.object-view-raw object=model}}
                        {{/if}}
                        {{#if model.canBeEdited}}
                            {{button.edit-object object=model}}
                        {{/if}}
                        {{button.delete-object action="deleteObject"
                            object=model}}
                    {{/if}}
            </div>
        </div>
        <div class="object-contents-body">
            {{#if isEditing}}
                <form>
                    <div class="form-group">
                    {{textarea class="form-control" value=model.contents rows=20
                        autofocus=true}}
                    </div>
                    <button type="button" class="btn btn-md btn-primary"
                            {{action 'saveObject' model}}>
                        Save</button>
                </form>
            {{else}}
                <form class="form-inline">
                    <div class="row">
                        <div class="col-md-6">
                            <span class="value-counter">{{model.contentsForDisplay}}</span>
                        </div>
                        <div class="col-md-6" style="vertical-align: middle;">
                            +
                            {{input value=model.incrementBy
                                id='incrementBy' class="form-control input-increment"}}

                            <button type="button" class="btn btn-md btn-primary"
                                    {{action 'incrementCounter' model}}>
                                Increment</button>
                            /
                            -
                            {{input value=model.decrementBy
                                id='decrementBy' class="form-control input-increment"}}

                            <button type="button" class="btn btn-md btn-primary"
                                    {{action 'decrementCounter' model}}>
                                Decrement</button>
                        </div>
                    </div>
                </form>
            {{/if}}
        </div>
        <div class="object-contents-footer">
            <strong>Page loaded:</strong> {{model.metadata.dateLoaded}}
        </div>
    </div>
</div>
<br />
