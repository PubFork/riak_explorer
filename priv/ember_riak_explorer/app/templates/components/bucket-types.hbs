<table class="table">
<tbody>
{{#each bucketTypes as |bt|}}
    <tr>
        <td>
        <div class="container">
            <div class="row">
                <div class="col-md-4">{{bt.bucketTypeId}}</div>
                <div class="col-md-3">
                    <strong>Active:</strong> {{bt.props.active}},
                    <strong>allow_mult:</strong> {{bt.props.allow_mult}}
                </div>
                <div class="col-md-5">
                    <strong>Actions:</strong>
                    {{#link-to 'bucket-type' bt
                            classNames='btn btn-xs btn-primary' }}
                        View Properties{{/link-to}}
                    {{#link-to 'bucket_list' (query-params cluster_id=clusterId bucket_type_id=bt.bucketTypeId)
                            classNames='btn btn-xs btn-primary' }}
                        Bucket List{{/link-to}}
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                </div>
            </div>
        </div>
        </td>
    </tr>
{{else}}
    No bucket types. Have you specified a node?
{{/each}}
</tbody>
</table>
