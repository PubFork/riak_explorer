<h4>Key List: {{model.bucketId}}</h4>

{{crumb-trail model=model}}

{{#if model.isLoaded}}
    <div class="container" style="margin-top: 2em;">
        <div class="row">
            <div>
            Cache created: {{model.created}}
            {{#if model.cluster.developmentMode}}
                {{refresh-keys action="refreshKeys" keyList=model}}
            {{/if}}
            </div>
        </div>
    </div>

    <div class="container" style="margin-top: 2em;">
        Displaying
        <strong>{{model.count}}</strong>
        keys out of
        <strong>{{model.total}}</strong>
        total.
        {{#if model.showDeleteKeys}}
        <button type="button" class="btn btn-xs btn-danger"
                {{action 'deleteBucket' model.bucket}}>
            Delete Listed Objects</button>
        {{/if}}

    </div>

    <div class="container" style="padding-top: 2em;">
        {{#riak-keys deleteObject="deleteObject" keys=model.keys}}{{/riak-keys}}
    </div>
{{else}}
    <div class="container" style="padding-top: 2em; text-align: center;">
    Loading...
    </div>
{{/if}}
