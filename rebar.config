{sub_dirs, ["rel"]}.

{cover_enabled, true}.

{lib_dirs, ["deps", "apps"]}.

{erl_opts, [debug_info, warnings_as_errors, {parse_transform, lager_transform}]}.

{xref_checks, []}.
{xref_queries, [{"(XC - UC) || (XU - X - B)", []}]}.

{reset_after_eunit, true}.

{deps, [
        {riakc, ".*", {git, "git://github.com/basho/riak-erlang-client", {tag, "2.5.0"}}},
        {node_package, ".*", {git, "git://github.com/basho/node_package", {branch, "no-epmd"}}},
        {webmachine, "1.10.*", {git, "git://github.com/basho/webmachine", {tag, "1.10.8p2"}}},
        {ibrowse, "4.3.*", {git, "git://github.com/cmullaparthi/ibrowse.git", {tag, "v4.3"}}},
        {lager, ".*", {git, "git://github.com/basho/lager", {tag, "3.2.4"}}},
        {lager_syslog, ".*", {git, "git://github.com/basho/lager_syslog", {tag, "3.0.3"}}},
        {cuttlefish, ".*", {git, "git://github.com/basho/cuttlefish", {tag, "2.0.10"}}},
        {eper, ".*", {git, "git://github.com/basho/eper.git", "0.97.5p1"}}
       ]}.
